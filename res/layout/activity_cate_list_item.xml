<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_margin="5dp" >

        <ImageView
            android:id="@+id/cate_item_imageView"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/car_item_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/cate_item_imageView"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/cate_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.8"
                
                android:text=""
                android:singleLine="true"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/cate_item_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="3"
                android:textColor="#898989"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/cate_item_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray" />

</LinearLayout>