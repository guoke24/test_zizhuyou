<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/citylist_divider" 
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#484E61" >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快捷登陆"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerInParent="true"
            />
        
       </RelativeLayout>
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        
        android:orientation="vertical"
        android:gravity="center_horizontal">
        
	        <LinearLayout android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_margin="15dip"
	            android:background="@color/bg_table_subtitle"
	            android:orientation="vertical"
	            android:gravity="center_horizontal">
	        	<EditText 
	        	    android:id="@+id/fastlogin_account"
	        	    android:layout_width="fill_parent"
	        	    android:layout_height="wrap_content"
	        	    android:layout_marginLeft="15dip"
	        	    android:layout_marginRight="15dip"
	        	    android:layout_marginTop="40dip"
	        	    android:layout_gravity="center"
	        	    android:hint="手机号"
	        	    android:textColorHint="@color/abs__bright_foreground_disabled_holo_dark"
	        	    />
	        	
	        	<LinearLayout 
	        	    android:layout_width="fill_parent"
	        	    android:layout_height="wrap_content"
	        	    android:layout_marginLeft="15dip"
	        	    android:layout_marginRight="15dip"
	        	    android:layout_marginTop="40dip"
	        	    android:layout_marginBottom="20dip"
	        	    android:layout_gravity="center"
	        	    android:orientation="horizontal"
	        	    >
	        	    <EditText 
                  android:id="@+id/fastlogin_validateCode"
	        	    android:layout_width="wrap_content"
	        	   	android:layout_weight="1"
	        	   	android:layout_height="wrap_content"
	        	    android:hint="验证码"
	        	    android:textColorHint="@color/abs__bright_foreground_disabled_holo_dark"
	        	    />
	        	    <guoke.custom.timebutton.TimeButton 
	               android:id="@+id/fastlogin_code_button"
	                
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text=""
	                android:background="@null"
	                android:onClick="register"
	                android:textColor="#484E61"
	                />
	        	    
	        	</LinearLayout>
	        	
	    	</LinearLayout>
	    	
	        <LinearLayout android:layout_width="fill_parent"
	            android:layout_height="40dip"
	            android:layout_marginTop="10dip"
	            android:gravity="center">
	        <Button 
                 android:id="@+id/fastlogin_login"
	            android:layout_width="fill_parent"
	            android:layout_height="40dip"	           
	            android:layout_marginLeft="15dip"
	            android:layout_marginRight="15dip"	            
	            android:background="#484E61"
	            android:text="登录"
	            android:textColor="@color/white"
	            android:onClick="onLogin"
	            android:clickable="true"
	           />
	         </LinearLayout>
	        <RelativeLayout android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="15dip"
	            android:layout_marginRight="15dip"
	            android:layout_marginTop="10dip">
	            <Button 
	                
	                 android:id="@+id/fastlogin_paw_login"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerInParent="true"
	                android:text="去用密码登陆"
	                android:onClick="register"
	                android:background="@null"
	                android:textColor="#484E61"/>
	            
	        </RelativeLayout>
	        
	</LinearLayout>
    

</LinearLayout>
