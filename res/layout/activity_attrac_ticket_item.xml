<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
       
    <TextView 
        android:id="@+id/ticket_item_price"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
		android:layout_alignParentRight="true"        
        android:text="￥99"
        android:textSize="18sp"
        android:textColor="@color/red"
        android:gravity="center"
        />

    <LinearLayout 
        android:id="@+id/ticket_item_content"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/ticket_item_price"

        android:orientation="vertical"
        >
        <TextView 
            android:id="@+id/ticket_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="3"
            android:text="七星景区成人门票"
            android:textSize="16sp"
            android:gravity="center_vertical"
            />
        <TextView 
            android:id="@+id/ticket_item_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="景区验证电子票"
            android:textSize="16sp"
            android:textColor="#898989"
            android:visibility="gone"
            />
    </LinearLayout>
    
</RelativeLayout>
